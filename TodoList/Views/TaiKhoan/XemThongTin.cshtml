@model IEnumerable<TodoList.Models.TAIKHOAN>

@{
    ViewBag.Title = "XemThongTin";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var thongTinCaNhan = ViewBag.ThongTinCaNhan as TodoList.Models.THONGTINCANHAN;
}

<h2>Thông tin của bạn</h2>
@if (thongTinCaNhan != null)
{
    using (Html.BeginForm("UpdateThongTinCaNhan", "TaiKhoan", FormMethod.Post, new { @class = "form" }))
    {
        <div class="form-group row mb-3">
            <label for="HOTEN" class="col-sm-2 col-form-label">Họ và tên:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="HOTEN" value="@thongTinCaNhan.HOTEN" />
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="NGAYSINH" class="col-sm-2 col-form-label">Ngày sinh:</label>
            <div class="col-sm-10">
                <input class="form-control" type="date" name="NGAYSINH" value="@(thongTinCaNhan.NGAYSINH.HasValue ? thongTinCaNhan.NGAYSINH.Value.ToString("yyyy-MM-dd") : string.Empty)" />
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="SDT" class="col-sm-2 col-form-label">Số điện thoại:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="SDT" value="@thongTinCaNhan.SDT" />
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="NGAYLAP" class="col-sm-2 col-form-label">Ngày lập:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="NGAYLAP" value="@thongTinCaNhan.NGAYLAP.Value.ToString("MM/dd/yyyy")" />
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="CMND" class="col-sm-2 col-form-label">CMND:</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="CMND" value="@thongTinCaNhan.CMND" />
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <input type="submit" class="btn btn-primary" value="Lưu" />
            </div>
        </div>
    }
}
else
{
    <p>Không tìm thấy thông tin cá nhân.</p>
}

