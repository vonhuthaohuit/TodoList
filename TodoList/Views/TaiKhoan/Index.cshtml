
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
    <link href="~/Content/stylelogin.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="~/Content/stylelayout.css" rel="stylesheet" />
    <link rel="shortcut icon" type="imgage/jpg" href="imgage/logo.jpg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body>
    <div class="container">
        <header>
            <div class="row">
                <div class="col-md-1 mt-4">
                    <div class="logo main-menu"><img src="~/image/logo.jpg" class="img-fluid"></div>
                </div>
                <div class="col-md-4 mt-4">
                    <ul class="main-menu">
                        <li><a href="#"><i class="fa fa-home"></i> Trang chủ</a></li>
                        <li>
                            <a href="@Url.Action("Index", "CongViec")">
                                <i class="fa fa-tasks"></i> Công Việc
                            </a>
                        </li>
                        <li><a href="#"><i class="fa fa-info-circle"></i> Giới thiệu</a></li>
                    </ul>
                </div>
                <div class="col-md-5">
                    <form>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Bạn tìm gì dọ...."
                                   aria-label="Recipient's username" aria-describedby="button-addon2">
                            <button class="btn
                                            button-search" type="button" id="button-addon2">
                                <i class="fa fa-search" style="
                                            position: relative;
                                            top: -5px;
                                            right: 30px;
                                        "></i>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-2 mt-4">
                    <ul class="main-menu">
                        <li><a href="@Url.Action("Index", "TaiKhoan")"><i class="fa fa-sign-in-alt"></i> Đăng nhập</a></li>
                    </ul>
                </div>
            </div>
        </header>
        <main>
            <div class="wrapper">
                <div class="title-text">
                    <div class="title login">Đăng nhập</div>
                    <div class="title signup">Đăng ký</div>
                </div>
                <div class="form-container">
                    <div class="slide-controls">
                        <input type="radio" name="slide" id="login" checked>
                        <input type="radio" name="slide" id="signup">
                        <label for="login" class="slide login">Đăng nhập</label>
                        <label for="signup" class="slide signup">Đăng ký</label>
                        <div class="slider-tab"></div>
                    </div>
                    <div class="form-inner">
                        @using (Html.BeginForm("CallLoginAPI", "TaiKhoan", FormMethod.Get, new { @class = "custom-form-class login", role = "form" }))
                        {
                            <div>
                                <label for="tenDangNhapLogin">Tên đăng nhập:</label>
                                <input type="text" id="tenDangNhapLogin" name="tenDangNhapLogin" />
                            </div>
                            <div>
                                <label for="matKhauLogin">Mật khẩu:</label>
                                <input type="password" id="matKhauLogin" name="matKhauLogin" />
                            </div>
                            if (TempData["ErrorMessage"] != null)
                            {
                                <div class="error">@TempData["ErrorMessage"]</div>
                            }
                            <div class="pass-link"><a href="#">Quên mật khẩu?</a></div>
                            <div class="field btn">
                                <div class="btn-layer"></div>
                                <input type="submit" value="Đăng nhập">
                            </div>
                        }
                        @using (Html.BeginForm("CallRegisterAPI", "TaiKhoan", FormMethod.Post, new { @class = "custom-form-class signup", role = "form" }))
                        {
                            <div>
                                <label for="tenDangNhapDangKy">Tên đăng nhập:</label>
                                <input type="text" id="tenDangNhapDangKy" name="tenDangNhapDangKy" />
                            </div>
                            <div>
                                <label for="matKhauDangKy">Mật khẩu:</label>
                                <input type="password" id="matKhauDangKy" name="matKhauDangKy" />
                            </div>
                            <div>
                                <label for="xacNhanMatKhau">Mật khẩu:</label>
                                <input type="password" id="xacNhanMatKhau" name="xacNhanMatKhau" />
                            </div>
                            if (TempData["ErrorMessage"] != null)
                            {
                                <div class="error">@TempData["ErrorMessage"]</div>
                            }

                            <div class="field btn">
                                <div class="btn-layer"></div>
                                <input type="submit" value="Đăng Ký">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </main>

        <footer>
        </footer>
    </div>

    <script>
        const loginText = document.querySelector(".title-text .login");
        const loginForm = document.querySelector("form.login");
        const loginBtn = document.querySelector("label.login");
        const signupBtn = document.querySelector("label.signup");
        const signupLink = document.querySelector("form .signup-link a");
        signupBtn.onclick = (() => {
            loginForm.style.marginLeft = "-50%";
            loginText.style.marginLeft = "-50%";
        });
        loginBtn.onclick = (() => {
            loginForm.style.marginLeft = "0%";
            loginText.style.marginLeft = "0%";
        });
        signupLink.onclick = (() => {
            signupBtn.click();
            return false;
        });
    </script>
    @{
        string popperJsUrl = "https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js";
    }
    <script src="@popperJsUrl"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
</body>
</html>
