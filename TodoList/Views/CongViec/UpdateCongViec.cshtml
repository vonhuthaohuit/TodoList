@model TodoList.Models.CONGVIEC

@{
    ViewBag.Title = "UpdateCongViec";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sửa công việc</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.TENCONGVIEC, "Tên công việc" , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENCONGVIEC, new { htmlAttributes = new { @class = "input-text-fix" } })
                @Html.ValidationMessageFor(model => model.TENCONGVIEC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MOTACONGVIEC, "Mô tả công việc" , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.MOTACONGVIEC, new { htmlAttributes = new { @class = "input-text-fix" } })
                @Html.ValidationMessageFor(model => model.MOTACONGVIEC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TRANGTHAIHOANTHANH, "Trang thái hoàn thành", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.TRANGTHAIHOANTHANH)
                    @Html.ValidationMessageFor(model => model.TRANGTHAIHOANTHANH, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            @Html.LabelFor(model => model.MALOAI, "Loại công việc", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MALOAI, new SelectList(ViewBag.MALOAIList, "Value", "Text"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MALOAI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-success">Sửa công việc</button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
